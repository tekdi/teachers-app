{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:testing-library/react"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "args": "after-used",
        "caughtErrors": "none",
        "ignoreRestSiblings": true,
        "vars": "all"
      }
    ],
    "prefer-const": "error",
    "react-hooks/exhaustive-deps": "off"
  }
}
